        <button id="open">เปิดจดหมาย</button>
        <button id="reset">ปิด</button>
    </div>

    <script>
        $(document).ready(function () {
            const env = $("#envelope");
            $("#open, #envelope").click(function () {
                env.removeClass("close").addClass("open");
            });
            $("#reset").click(function (e) {
                e.stopPropagation();
                env.removeClass("open").addClass("close");
            });
        });
    </script>
